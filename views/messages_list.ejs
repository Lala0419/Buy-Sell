<!DOCTYPE html>
<html lang="en">
	<head>
		<title>Messgaes</title>

		<meta charset="UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=edge" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />

		<link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
		<link rel="stylesheet" href="/styles/reset.css" />
		<link rel="stylesheet" href="/styles/messages.css" />

		<script src="/vendor/jquery-3.0.0.js"></script>
		<script defer src="/scripts/messages.js"></script>
	</head>

	<body>
		<%- include("partials/_nav") %>
		<div class="top">
			<h1><%=item.name %></h1>
			<% if (user.id === 1) { %>

			<h2>Message from <%= users.find(user=>user.id === 4).username %></h2>
      <!-- <p><%= users.find(user=>user.id === 3).username %></p> -->
		</div>
		<section class="dummy_message">
			<img src="/img/user2_profileLogo.jpeg" alt="logo" />
			<p>Hi, is this item available?</p>
		</section>

		<% for(let i = 1; i < messages.length; i++){ %>
		<section id="messages" class="message hide">
			<p><%= messages[i].message %></p>
			<img src="/img/user1_profileLogo.jpeg" alt="logo" />
		</section>
		<%}%>

		<form action="/messages" method="POST" id="messagesForm">
			<input
				class="input"
				type="text"
				id="message"
				name="message"
				value=""
				placeholder="Yes, it is!"
			/><br /><br />
			<% }else { %>
<h2>Message to Alice</h2>
		</div>

		<% for(let message of messages){ %>
		<section id="messages" class="message hide">
			<p><%= message.message %></p>
			<img src="/img/user2_profileLogo.jpeg" alt="logo" />
		</section>
		<%}%>

		<form action="/messages" method="POST" id="messagesForm">
			<input
				class="input"
				type="text"
				id="message"
				name="message"
				value=""
				placeholder="Is this still available?"
			/><br /><br />

     <% } %>
			<input class="button" type="submit" value="Submit" id="fetch-messages" />
		</form>
	</body>
</html>

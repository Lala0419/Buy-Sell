<!-- Top nav bar (fixed) -->
<!DOCTYPE html>
<html lang="en">
<head>
 <style>
 nav {
  position: fixed;
  width: 100%;
  height: 50px;
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: grey;
  box-shadow:2px 2px 2px rgb(142, 140, 140);
  background: white;
  z-index: 2;



  .logo {
    margin-left: 1%;
    width: 30px;
    height: 30px;
    object-fit: fill;
    border-radius: 20px;
    }

  .container1 {
    padding-right: 1%;
    width: 50%;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  .link {
  text-decoration: none;
  color: black;
  }
  .link:hover{
    font-weight: 900;
   }

.logout{
  border-radius: 10px;
  width: 8em;
    height: 5ex;
    background-image: linear-gradient(180deg, #f5f5f2 50%, #fafaf9);
    border: none;
    border-radius: 5px;
    font-weight: bold;
    color: rgb(43, 43, 43);
    cursor: pointer;
}

.logout:active {
    box-shadow: 2px 2px 5px #fcfcfb;
}
.logout:hover{
  box-shadow: 2px 2px 5px #a9a8a8;


}
}
</style>
</head>
<body>
<nav>
  <a href="/"><img src="https://i.pinimg.com/550x/33/81/b1/3381b1684477e149d7cbd222fb9d6263.jpg"
  style="width: 40px; height: 40px; object-fit: cover" class="logo"></a></img>

  <div class="container1">
    <a href="/items/new_items" class="link"><span class="new_item">New item</span></a>
    <a href="/messages/17" class="link"><span class="my_messages">  My Messages</span></a>
    <a href="/favorites" class="link"><span class="my_favourites">My Favourites</span></a>
    <span class="Login/Register">Logged in as <%= user.username %></span>
    <form method="POST" action="/users/logout">
      <button class="logout" type="submit">Log out</button>
    </form>

  </div>
</nav>
